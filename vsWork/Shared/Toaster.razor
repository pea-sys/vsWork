@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using Blazored.Toast.Services
@using vsWork.Features.UserSetting.Store
@using vsWork.Store.SettingUserUseCase


@inject IToastService toastService

@code {
    protected override void OnInitialized()
    {

        SubscribeToAction<UserSettingLoadUsersSuccessAction>(ShowUserSettingLoadUsersSuccessToast);
        SubscribeToAction<UserSettingSettingUserSuccessAction>(ShowUserSettingSettingUserSuccessToast);
        SubscribeToAction<UserSettingSettingUserFailureAction>(ShowUserSettingSettingUserFailureToast);
        base.OnInitialized();
    }

    private void ShowUserSettingLoadUsersSuccessToast(UserSettingLoadUsersSuccessAction action)
    {
        toastService.ShowSuccess("LoadUsers Success!");
    }
    private void ShowUserSettingSettingUserSuccessToast(UserSettingSettingUserSuccessAction action)
    {
        toastService.ShowSuccess("SettingUser Success!");
    }
    private void ShowUserSettingSettingUserFailureToast(UserSettingSettingUserFailureAction action)
    {
        toastService.ShowError("SettingUser Failure!");
    }
}
