@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using Blazored.Toast.Services
@using vsWork.Features.UserSetting.Store
@using vsWork.Store.SettingUserUseCase


@inject IToastService toastService

@code {
    protected override void OnInitialized()
    {

        SubscribeToAction<LoadListDataSuccessAction>(ShowUserSettingLoadUsersSuccessToast);
        SubscribeToAction<SettingSuccessAction>(ShowUserSettingSettingUserSuccessToast);
        SubscribeToAction<SettingFailureAction>(ShowUserSettingSettingUserFailureToast);
        base.OnInitialized();
    }

    private void ShowUserSettingLoadUsersSuccessToast(LoadListDataSuccessAction action)
    {
        toastService.ShowSuccess("LoadUsers Success!");
    }
    private void ShowUserSettingSettingUserSuccessToast(SettingSuccessAction action)
    {
        toastService.ShowSuccess("SettingUser Success!");
    }
    private void ShowUserSettingSettingUserFailureToast(SettingFailureAction action)
    {
        toastService.ShowError("SettingUser Failure!");
    }
}
