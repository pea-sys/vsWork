@inherits LayoutComponentBase
@inject UserActionService userActionService


<div class="page">
    @* 認証していない場合はサイドバーを表示しない *@
    @if (!string.IsNullOrEmpty(userActionService.UserId))
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <div class="main">
        <div class="content px-4">
            @Body
        </div>
    </div>
</div>
